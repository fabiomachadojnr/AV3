import java.util.Scanner;

public class av3 {

    public static void main(String[] args) {
        // TODO code application logic here
        Scanner leitor = new Scanner(System.in);
        
        int opc;
        double saque = 0;
        double valor = 0;
        
        do {
            System.out.println("MENU - CAIXA");
            System.out.println("1 - Saldo\n"
                + "2 - Saque\n"
                + "3 - Depósito\n"
                + "9 - Sair");
            System.out.print("Escolha uma opção:");
            opc = leitor.nextInt();
            switch (opc){
                
                case 1:
                   deposito(valor);
                    break;
                   
                case 2:
                    System.out.print("Selecione o quanto deseja sacar: ");
                    saque = leitor.nextDouble();
                    sacar(saque);
                    
                    break;     
                  
                case 3:
                    System.out.print("Selecione o quanto deseja depositar: ");
                    valor = leitor.nextDouble();
                    deposito(valor);
                    break;
                
                case 9:
                    break;
                default:
                    System.err.println("Ação indisponível no momento");          
            }
          
        } while (opc != 9);
    } 
    public static void depósito (double valor){
        double saldo = 0;
        saldo += valor;
        System.out.println("Depósito: " + valor);      
    }
    public static void sacar (double valor){     
       double saldo = 0;
        saldo -= valor;
        System.out.println("Saque: " + valor);      
    } 
}